@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<form method="post" asp-controller="Index" asp-action="OnPost">
	<div class="form-group">
		<label>First Name</label>
		<input asp-for="FirstName" type="text" placeHolder="Type your first name" />
	</div>
	<div class="form-group">
		<label>Last Name</label>
		<input asp-for="LastName" type="text" placeHolder="Type your last name" />
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>



<h3>Hello, @Model.FirstName @Model.LastName<</h3>
